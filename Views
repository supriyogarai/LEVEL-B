CREATE VIEW vwCustomerOrders AS
SELECT 
    C.CompanyName,
    O.OrderID,
    OD.ProductID,
    OD.UnitPrice,
    OD.Quantity,
    OD.Discount
FROM 
    Orders O
JOIN 
    Customers C ON O.CustomerID = C.CustomerID
JOIN 
    [Order Details] OD ON O.OrderID = OD.OrderID;


CREATE VIEW vwCustomerOrders_Yesterday AS
SELECT 
    C.CompanyName,
    O.OrderID,
    OD.ProductID,
    OD.UnitPrice,
    OD.Quantity,
    OD.Discount
FROM 
    Orders O
JOIN 
    Customers C ON O.CustomerID = C.CustomerID
JOIN 
    [Order Details] OD ON O.OrderID = OD.OrderID
WHERE 
    CAST(O.OrderDate AS DATE) = CAST(GETDATE() - 1 AS DATE);


CREATE VIEW MyProducts AS
SELECT 
    P.ProductID,
    P.ProductName,
    P.QuantityPerUnit,
    P.UnitPrice,
    S.CompanyName,
    C.CategoryName
FROM 
    Products P
JOIN 
    Suppliers S ON P.SupplierID = S.SupplierID
JOIN 
    Categories C ON P.CategoryID = C.CategoryID
WHERE 
    P.Discontinued = 0;
